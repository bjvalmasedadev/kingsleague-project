---
import CardBackgroundTeam from './CardBackgroundTeam.astro'

const {
  playerName,
  playerImage,
  teamId,
  teamImage,
  teamName,
  title,
  subtitle
} = Astro.props
const gradient = `bg-${teamId}`

const whiteImage = teamImage?.replace('.svg', '-inverse.svg')
---

<article class={`relative  rounded p-5 ${gradient}`}>
  <div class='flex flex-col justify-between gap-y-10'>
    <hedader class='relative z-40'>
      <h4
        class='text-white font-title font-black text-[40px] lg:text-[80px] leading-none'
      >
        {title}
      </h4>
      <h5
        class='uuppercase text-orange-500 font-black font-title text-lg lg:text-3xl'
      >
        {subtitle}
      </h5>
    </hedader>

    <footer class='relative z-40'>
      <strong class='text-white font-semibold text-xl'>{playerName}</strong>
      <p class='text-white opacity-80'>{teamName}</p>
    </footer>
  </div>
  <CardBackgroundTeam image={whiteImage} />
  <img
    src={`https://api.kingsleague.bjvalmaseda.com/static/players/${playerImage}`}
    class='absolute -right-2 bottom-0 w-60'
    alt={`Imagen de ${playerName}`}
  />
</article>
