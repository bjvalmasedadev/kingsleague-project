---
const response = await fetch(
  'https://api.kingsleague.bjvalmaseda.com/leaderboard/'
)
const leaderboard = await response.json()

const { format } = Astro.props
const isSmall = format === 'small'
---

<div class='relative overflow-x-auto shadow-md sm:rounded-lg'>
  <table class='w-full text-sm text-left text-black'>
    <thead class='font-black text-xs text-white uppercase bg-black'>
      <>
        <th scope='col' class='px-6 py-3 text-center'> Pos.</th>
        <th scope='col' class='px-6 py-3'> Equipo</th>
        <th title='Victorias' scope='col' class='px-6 py-3 text-center'> V</th>
        <th title='Derrotas' scope='col' class='px-6 py-3 text-center'> D</th>
        {
          !isSmall && (
            <>
              <th
                title='Goles a favor'
                scope='col'
                class='px-6 py-3 text-center'
              >
                GF
              </th>
              <th
                title='Goles en contra'
                scope='col'
                class='px-6 py-3 text-center'
              >
                GC
              </th>
              <th
                title='Tarjetas Amarillas'
                scope='col'
                class='px-6 py-3 text-center'
              >
                TA
              </th>
              <th
                title='Tarjetas Rojas'
                scope='col'
                class='px-6 py-3 text-center'
              >
                TR
              </th>
            </>
          )
        }
      </>
    </thead>
    <tbody>
      {
        leaderboard.map((info, index) => {
          const {
            wins,
            losses,
            team,
            rank,
            scoredGoals,
            yellowCards,
            redCards,
            concededGoals
          } = info
          const { image, name, id } = team
          return (
            <tr class='odd:bg-white even:bg-slate-100 border-b hover:bg-slate-100'>
              <th
                scope='row'
                class='px-6 py-4 font-black text-black whitespace-nowrap text-center'
              >
                {rank}
              </th>
              <td class='px-6 py-4 font-black '>
                <a
                  href={`/team/${id}`}
                  class='flex gap-x-4 items-center hover:opacity-75'
                >
                  <img src={image} alt={'Logo de ' + name} class='w-6 h-6' />
                  {name}
                </a>
              </td>
              <td class='px-6 py-4 text-center'> {wins}</td>
              <td class='px-6 py-4 text-center'> {losses}</td>
              {!isSmall && (
                <>
                  <td class='px-6 py-4 font-black text-center'>
                    {scoredGoals}
                  </td>
                  <td class='px-6 py-4 font-black text-center'>
                    {concededGoals}
                  </td>
                  <td class='px-6 py-4 font-black text-center'>
                    {yellowCards}
                  </td>
                  <td class='px-6 py-4 font-black text-center'>{redCards}</td>
                </>
              )}
            </tr>
          )
        })
      }
    </tbody>
  </table>
</div>
