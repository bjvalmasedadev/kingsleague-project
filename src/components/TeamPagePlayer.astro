---
const { players, title } = Astro.props
---

<section>
  <h2 class='text-5xl font-title text-white text-center mt-24'>{title}</h2>
  <div class='grid grid-cols-4 gap-2'>
    {
      players.map((player, index) => (
        <article class='text-center  relative font-title text-slate-900 rounded-sm p-5 m-auto'>
          <img
            class='w-56 h-auto m-auto aspect-[170/239]'
            src={`https://api.kingsleague.bjvalmaseda.com/static/players/${player.image}`}
          />
          <h3 class='text-white font-title text-3xl pt-2'>
            {player.dorsalName}
          </h3>
          <h4 class='font-body uppercase rounded-full bg-black/50 text-principal py-1 font-semibold'>
            {player.role}
          </h4>
        </article>
      ))
    }
  </div>
</section>
